<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPokemonActivity">

    <Button
        android:id="@+id/ButtonListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Pokemons"
        app:layout_constraintBottom_toTopOf="@+id/buttonCrear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.671" />

    <Button
        android:id="@+id/buttonCapturados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="Pokemones Capturados"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="326dp" />

    <Button
        android:id="@+id/buttonCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="268dp"
        android:text="Crear Pokemon"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="123dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXAMEN FINAL"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="112dp" />

    <Button
        android:id="@+id/ButtonEntrenador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad Entrenador"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="571dp" />
</androidx.constraintlayout.widget.ConstraintLayout>